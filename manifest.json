{
    "name": "chrome-extension-starter",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "icons": {
        "128": "images/icon.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "128": "images/icon.png"
        }
    },
    "options_page": "html/options.html"
}
